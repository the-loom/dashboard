<% nav_add 'Gamificación', '#' %>
<% nav_add 'Emblemas', badges_path %>
<% nav_add @badge.name, badge_path(@badge) unless @badge.new_record? %>
<% nav_add @labels.title, '#' %>
<%= nav_render %>

<%= simple_form_for @badge do |f| %>

  <%= render :partial => 'shared/errors', locals: { f: f } %>

  <%= f.input :name, label: 'Nombre' %>

  <%= f.input :description, label: 'Descripción' %>

  <%= f.input :image, label: 'Imagen' %>

  <%= f.input :featured, label: 'Especial', as: :boolean %>

  <%= f.button :submit, @labels.button, class: "btn-primary" %>


<% end %>
