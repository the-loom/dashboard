<% nav_add 'Gamificación', '#' %>
<% nav_add 'Eventos', '#' %>
<%= nav_render %>

<%= link_to 'Nuevo evento', new_event_url, class: 'btn btn-primary' %>
<br><br>

<% if @events.empty? %>

  <div class="alert alert-info">
    <p>Aún no hay ningún evento</p>
  </div>

<% else %>

  <table class="events table table-hover">
    <thead>
    <tr>
      <th>Evento</th>
      <th>Descripción</th>
      <th>Habilitado</th>
      <th>Otorgamientos</th>
      <th>Puntos</th>
      <th>Pts Mínimos</th>
      <th>Pts Máximos</th>
      <% if Course.current.on?(:competences) %>
        <th>Competencia</th>
      <% end %>
      <th class="no-sort">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= link_to event.name, event_path(event.id) %>
        </td>
        <td>
          <%= event.description %>
        </td>
        <td>
          <%= yes_no(event.enabled) %>
        </td>
        <td>
          <%= event.occurrences.size %> veces
        </td>
        <td>
          <%= event.points %> pts.
        </td>
        <td>
          <%= event.min_points %> pts.
        </td>
        <td>
          <%= event.max_points %> pts.
        </td>
        <% if Course.current.on?(:competences) %>
          <td>
            <%= event.competence_tag.try(:name) %>
          </td>
        <% end %>
        <td>
          <%= link_to "Editar", edit_event_path(event), class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<%= content_for :head do %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
<% end %>

<%= content_for :javascript do %>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="application/javascript"></script>

  <script type="application/javascript">
      $(function () {
          $('.events').DataTable({
              order: [[0, "asc"]],
              paging: false,
              language: {
                  url: "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
              },
              columnDefs: [{
                  targets: 'no-sort',
                  orderable: false
              }]
          });
      });
  </script>
<% end %>
