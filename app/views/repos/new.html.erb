<legend>Nuevo desafío</legend>

<%= simple_form_for @repo, url: repos_path do |f| %>

  <%= render :partial => 'shared/errors', locals: { f: f } %>
  
  <%= f.input :user, label: 'Usuario de GitHub' %>

  <%= f.input :name, label: 'Nombre del Repo' %>

  <%= f.input :git_url, label: 'URL en GitHub' %>

  <%= f.input :description, label: 'Descripción' %>

  <%= f.input :avatar_url, label: 'URL de la Imagen' %>

  <%= f.input :difficulty, label: 'Dificultad', input_html: {min: 1, max: 5} %>

  <%= f.button :submit, 'Crear desafío', class: "btn-primary" %>

<% end %>
