
<% nav_add 'Desafíos', peer_review_challenges_path %>
<% nav_add 'Resumen de desafíos', '#' %>
<%= nav_render %>

<% if @challenges.empty? %>
  <div class="alert alert-info">
    <p>Aún no hay ningún desafío</p>
  </div>
<% else %>
  <% stats = PeerReviewChallengesStats.new(@students, @challenges) %>
  <table class="table table-hover attendance">
    <thead>
      <tr>
        <th>Estudiante</th>
        <% @challenges.each do |challenge| %>
          <th><%= challenge.title %></th>
        <% end %>
        <th>Desafíos realizados.</th>
        <th><nobr>Desafíos realizados. %</nobr></th>
      </tr>
    </thead>
    <tbody>
        <% stats.solutions_to_challenges.each do |student, challenges| %>
          <tr>
            <td>
              <% if student.current_membership.enabled? %>
                <%= link_to student.full_name, user_details_url(student.nickname) %>
              <% else %>
                <s>
                  <%= link_to student.full_name, user_details_url(student.nickname) %>
                </s>
              <% end %>
             </td>
            <% challenges.each do |challenge| %>
              <td>
                <%= checkmark challenge %>
              </td>
            <% end %>
            <td>
              <%= stats.challenges_made_by(student)%>
            </td>
            <td>
              <%= stats.percentage_of_solutions_made_by(student) %>%
            </td>
          </tr>
        <% end %>
    </tbody>
    <tfoot>
      <th>Totales</th>
      <% stats.number_of_challenges_solved.each do |solution| %>
        <th><%= solution %></th>
      <% end %>
      <th>Desafíos realizados.</th>
      <th>Desafíos realizados. %</th>
    </tfoot>
  </table>
<% end %>

<%= content_for :head do %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
  <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.dataTables.min.css">
<% end %>

<%= content_for :javascript do %>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="application/javascript"></script>
  <script src="https://cdn.datatables.net/fixedheader/3.1.6/js/dataTables.fixedHeader.min.js" type="text/javascript"></script>

  <script type="application/javascript">
      $(function () {
          $('.attendance').DataTable({
              fixedHeader: true,
              order: [[ 0, "asc" ]],
              paging: false,
              language: {
                  url: "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
              },
              columnDefs: [ {
                  targets: 'no-sort',
                  orderable: false
              } ]
          });
      });
  </script>
<% end %>