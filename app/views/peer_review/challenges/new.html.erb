<legend>Nuevo desafío</legend>

<%= form_for @challenge, url: peer_review_challenges_path do |f| %>

  <%= render :partial => 'shared/errors', locals: { f: f } %>

  <div class="form-group">
    <%= f.label :title, 'Título', class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :difficulty, 'Dificultad', class: 'control-label' %>
    <%= f.number_field :difficulty, class: 'form-control', min: 1, max: 5 %>
  </div>

  <div class="form-group">
    <%= f.label :instructions, 'Instrucciones', class: 'control-label' %>
    <%= f.text_area :instructions, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :reviewer_instructions, 'Instrucciones para el revisor', class: 'control-label' %>
    <%= f.text_area :reviewer_instructions, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Crear desafío", class: "btn btn-primary" %>
  </div>

<% end %>
