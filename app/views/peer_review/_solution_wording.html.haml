- random_id = "_" + rand(36**6).to_s(36)
- if source_code
  .code.solution
    %textarea{id: random_id}
      != wording
- else
  .well
    != wording

- if source_code
  = content_for :javascript do
    :javascript
        var myTextArea = document.querySelector("##{random_id}");
        CodeMirror.fromTextArea(myTextArea, {
          lineNumbers: true,
          matchBrackets: true,
          mode: "#{language}",
          readOnly: true,
          autoRefresh: true
        });
