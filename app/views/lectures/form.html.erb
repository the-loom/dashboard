<% nav_add 'Aula', '#' %>
<% nav_add 'Clases', lectures_path %>
<% nav_add @lecture.summary, lectures_path(@lecture) unless @lecture.new_record? %>
<% nav_add @labels.title, '#' %>
<%= nav_render %>

<%= simple_form_for @lecture do |f| %>

  <%= render :partial => 'shared/errors', locals: { f: f } %>
 
  <%= f.input :summary, label: 'Resumen' %>

  <%= f.input :date, label: 'Fecha' %>

  <%= f.input :required, label: 'Asistencia requerida', as: :boolean %>

  <%= f.button :submit, @labels.button, class: "btn-primary" %>

<% end %>
