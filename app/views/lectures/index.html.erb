<% nav_add 'Aula', '#' %>
<% nav_add 'Clases', '#' %>
<%= nav_render %>

<%= link_to 'Nueva clase', new_lecture_path, class: 'btn btn-primary' %>
<br><br>

<% if @lectures.empty? %>

  <div class="alert alert-info">
    <p>AÃºn no hay ninguna clase</p>
  </div>

<% else %>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Resumen</th>
      <th>Fecha</th>
      <th>Asistencia requerida</th>
    </tr>
    </thead>
    <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td>
          <%= link_to lecture.summary, edit_lecture_path(lecture) %>
        </td>
        <td>
          <%= l lecture.date.in_time_zone('Buenos Aires') %>
        </td>
        <td>
          <%= yes_no(lecture.required) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>
