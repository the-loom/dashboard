<legend>
  Listado de clases
  <%= link_to 'Nueva clase', new_lecture_path, class: 'btn btn-primary pull-right' %>
</legend>

<% if @lectures.empty? %>

  <div class="alert alert-info">
    <p>AÃºn no hay ninguna clase</p>
  </div>

<% else %>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Resumen</th>
      <th>Fecha</th>
    </tr>
    </thead>
    <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td>
          <%= link_to lecture.summary, lecture_path(lecture.id) %>
        </td>
        <td>
          <%= l lecture.date.in_time_zone('Buenos Aires') %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>
