<% nav_add 'Ejercicios', '#' %>
<%= nav_render %>

<% if policy(Exercise).create? %>
  <%= link_to 'Nuevo ejercicio', new_exercise_path, class: 'btn btn-primary pull-right' %>

  <br><br>
<% end %>

<% if @exercises.empty? %>

  <div class="alert alert-info">
    <p>Aún no hay ningún ejercicio para comenzar a resolver</p>
  </div>

<% else %>

  <table class="exercises table table-hover">
    <thead>
    <tr>
      <th>Nombre</th>
      <th class="no-sort">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td>
          <%= link_to exercise.name, exercise_path(exercise.id) %>
        </td>
        <td>
          <% if policy(Exercise).manage? %>
            <% if exercise.published? %>
              <%= button_to "Despublicar", publish_exercise_path(exercise, mode: 'unpublish'), method: :post, class: 'btn btn-default btn-sm' %>
            <% else %>
              <%= link_to "Publicar", publish_exercise_path(exercise, mode: 'publish'), method: :post, class: 'btn btn-default btn-sm' %>
            <% end %>
            <%= link_to "Editar", edit_exercise_path(exercise), class: 'btn btn-default btn-sm' %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<%= content_for :head do %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>

  <style>
    form.button_to {
      display: inline-block;
      margin: 0 0.1em;
    }
  </style>

<% end %>

<%= content_for :javascript do %>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="application/javascript"></script>

  <script type="application/javascript">
      $(function () {
          $('.exercises').DataTable({
              order: [[0, "asc"]],
              paging: false,
              language: {
                  url: "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
              },
              columnDefs: [{
                  targets: 'no-sort',
                  orderable: false
              }]
          });
      });
  </script>
<% end %>
