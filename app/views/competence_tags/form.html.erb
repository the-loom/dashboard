<% nav_add 'Gamificación', '#' %>
<% nav_add 'Competencias', competence_tags_path %>
<% nav_add @competence_tag.name, competence_tag_path(@competence_tag) unless @competence_tag.new_record? %>
<% nav_add @labels.title, '#' %>
<%= nav_render %>

<%= simple_form_for @competence_tag do |f| %>

  <%= render :partial => 'shared/errors', locals: { f: f } %>

  <%= f.input :name, label: 'Nombre' %>
  <%= f.input :description, label: 'Descripción' %>
  
  <%= f.button :submit, @labels.button, class: "btn-primary" %>

<% end %>
