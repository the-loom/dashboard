<legend>
  Listado de cursos
</legend>

<table class="table table-hover">
  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td>
        <%= course.name %>
      </td>
      <td>
        <% if current_user.courses.include?(course) %>
          <%= link_to switch_course_path(course), class: 'btn btn-primary' do %>
            Ir al aula virtual
          <% end %>
        <% else %>
          <%= link_to enroll_course_path(course), class: 'btn btn-primary' do %>
            Inscribirse
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
