<% nav_add 'Administración', '#' %>
<% nav_add 'Usuarios', '#' %>
<%= nav_render %>

<div class="table-responsive">
  <table class="members table table-hover">
    <thead>
    <tr>
      <th class="no-sort">Foto</th>
      <th>Nombre</th>
      <th>Membresías activas</th>
      <th>Correo electrónico</th>
      <th class="no-sort">Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag entity_avatar(user), {class: "avatar", alt: user.full_name, "data-id": user.id } %>
        </td>
        <td>
          <%= link_to user.full_name, user_details_url(user.nickname) %>
          <small>(<%= user.uuid %>)</small>
          <br/>
          <small><%= user.nickname %></small>
        </td>
        <td>
          <ul>
            <% user.memberships.map { |x| "#{x.course.name} (#{x.role})" }.each do |m| %>
              <li><%= m %></li>
            <% end %>
          </ul>
        </td>
        <td><%= mail_to user.email %></td>
        <td>
          <% if policy(user).impersonate? %>
            <%= link_to 'Personificar', impersonate_admin_user_path(user), class: 'btn btn-default btn-sm' %><br/>
          <% end %>

        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= content_for :head do %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>

<% end %>

<%= content_for :javascript do %>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="application/javascript"></script>

  <script type="application/javascript">
      $(function () {
          $('.members').DataTable({
              order: [[1, "asc"]],
              paging: true,
              language: {
                  url: "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
              },
              columnDefs: [{
                  targets: 'no-sort',
                  orderable: false
              }]
          });
      });
  </script>
<% end %>
