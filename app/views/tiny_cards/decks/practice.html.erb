  </div>
</div>
<div id="card-commands">
  <button type="button" class="btn btn-secondary" onclick='anterior()'>Anterior</button>
  <button type="button" class="btn btn-secondary" onclick='siguiente()'>Siguiente</button>
</div>

<%= content_for :head do %>
  <style>
    #card-commands {
      margin: 10px;
      text-align: center;
    }

    #card-container {
      width: 100%;
      overflow: hidden;
    }

    #card-slider {
      margin-top: 50px;
      margin-bottom: 50px;
      width: 1000000px;
      transition: margin-left 700ms;
    }

    .card {
      float: left;
    }

    .front, .back {
      border: 1px solid #555;
      border-radius: 10px;
      background: #FFF;
      text-align: center;
      padding: 15px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }
  </style>

<% end %>

<%= content_for :javascript do %>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="application/javascript"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-Flip/1.1.2/jquery.flip.min.js" type="application/javascript"></script>



  <script type="application/javascript">
      var deck = <%== @deck.to_json %>;
      var index = 0;
      var card_width;
      var proportion = 10 / 16;
      var card_margin;

      function cambio() {
          $("#card-slider").css('margin-left', (card_width + 2 * card_margin) * -index + "px");
      }

      function anterior() {
          if (index > 0) {
              index--;
              cambio();
          }
      }

      function siguiente() {
          if (index < deck.cards.length - 1) {
              index++;
              cambio();
          }
      }

      function build() {
          var html = [],
              card;
          for (var i = 0; i < deck.cards.length; i++) {
              card = deck.cards[i];
              html.push("<div class='card'><div class='front'>" + card.front + "</div><div class='back'>" + card.back + "</div></div>");
          }
          $("#card-slider").html(html.join(""));
          $(".card").flip();
      }

      function resize() {
          var container_width = $("#card-container").width();
          card_width = Math.min(400, container_width * .8);
          card_margin = (container_width - card_width) / 2;
          $(".card").css("width", card_width)
              .css("height", card_width / proportion)
              .css("margin-left", card_margin + "px")
              .css("margin-right", card_margin + "px")
              .css("perspective", "1000px");
          $("#card-slider").css("height", card_width / proportion + "px");
          cambio();
      }

      $(window).on('resize', resize);

      $(document).keydown(function (e) {
          switch (e.which) {
              case 37: // left
                  anterior();
                  break;
              case 39: // right
                  siguiente();
                  break;
          }
      });

      build();
      resize();


      // https://stackoverflow.com/a/23230280/7427553
      document.addEventListener('touchstart', handleTouchStart, false);
      document.addEventListener('touchmove', handleTouchMove, false);

      var xDown = null;
      var yDown = null;

      function getTouches(evt) {
          return evt.touches ||          // browser API
              evt.originalEvent.touches; // jQuery
      }

      function handleTouchStart(evt) {
          const firstTouch = getTouches(evt)[0];
          xDown = firstTouch.clientX;
          yDown = firstTouch.clientY;
      }

      function handleTouchMove(evt) {
          if (!xDown || !yDown) {
              return;
          }

          var xUp = evt.touches[0].clientX;
          var yUp = evt.touches[0].clientY;

          var xDiff = xDown - xUp;
          var yDiff = yDown - yUp;

          if (Math.abs(xDiff) > Math.abs(yDiff)) {/*most significant*/
              if (xDiff > 0) {
                  siguiente();
              } else {
                  anterior();
              }
          } else {
              if (yDiff > 0) {
                  /* up swipe */
              } else {
                  /* down swipe */
              }
          }
          /* reset values */
          xDown = null;
          yDown = null;
      }

  </script>
<% end %>
